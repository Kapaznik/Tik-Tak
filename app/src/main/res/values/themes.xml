<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorControlActivated">@color/squareColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppThemeWithActionBar2" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorControlActivated">@color/squareColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>


                <item name="android:contextPopupMenuStyle">@style/PopupMenuStyle</item>
                <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>

<!--         Customize your theme here. -->
    </style>
    <style name="PopupMenuStyle" parent="AppThemeWithActionBar2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:popupBackground">@android:color/black</item>
        <!-- Diğer özel ayarlamalar -->
    </style>

    <style name="AppThemeWithActionBar" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorControlActivated">@color/squareColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogCustom" parent="@style/Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:textColor">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">#FFF</item>
        <item name="android:background">@color/squareColor</item>

    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>